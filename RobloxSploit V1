local player = game.Players.LocalPlayer
local playerGui = player:FindFirstChild("PlayerGui")

if not playerGui then
    warn("PlayerGui not found!")
    return
end

-- üåü Create Main GUI üåü --
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = playerGui

local MainFrame = Instance.new("Frame")
MainFrame.Parent = ScreenGui
MainFrame.Size = UDim2.new(0, 220, 0, 530) -- Increased height for proper spacing
MainFrame.Position = UDim2.new(0, 20, 0.5, -265) 
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BackgroundTransparency = 0.2

local UICorner = Instance.new("UICorner")
UICorner.Parent = MainFrame
UICorner.CornerRadius = UDim.new(0, 15)

local UIStroke = Instance.new("UIStroke")
UIStroke.Parent = MainFrame
UIStroke.Color = Color3.fromRGB(120, 120, 120)
UIStroke.Thickness = 3

-- ‚úñ Close Button ‚úñ --
local CloseButton = Instance.new("TextButton")
CloseButton.Parent = MainFrame
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -35, 0, 5)
CloseButton.Text = "‚úñ"
CloseButton.TextColor3 = Color3.fromRGB(255, 0, 0)
CloseButton.BackgroundTransparency = 1
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 18

CloseButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

-- üåü Create Warning Frame (Properly Positioned) üåü --
local WarningFrame = Instance.new("Frame")
WarningFrame.Parent = MainFrame
WarningFrame.Size = UDim2.new(1, -20, 0, 60)
WarningFrame.Position = UDim2.new(0, 10, 1, -80) -- Fixed overlap issue
WarningFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
WarningFrame.BackgroundTransparency = 0.3

local WarningCorner = Instance.new("UICorner")
WarningCorner.Parent = WarningFrame
WarningCorner.CornerRadius = UDim.new(0, 10)

local WarningGlow = Instance.new("UIStroke")
WarningGlow.Parent = WarningFrame
WarningGlow.Color = Color3.fromRGB(255, 0, 0)
WarningGlow.Thickness = 2

local WarningText = Instance.new("TextLabel")
WarningText.Parent = WarningFrame
WarningText.Size = UDim2.new(1, -10, 1, -10)
WarningText.Position = UDim2.new(0, 5, 0, 5)
WarningText.Text = "‚ö†Ô∏è USE THIS AT YOUR OWN RISK!"
WarningText.TextColor3 = Color3.fromRGB(255, 0, 0)
WarningText.Font = Enum.Font.GothamBold
WarningText.TextSize = 14
WarningText.BackgroundTransparency = 1

local CreditText = Instance.new("TextLabel")
CreditText.Parent = WarningFrame
CreditText.Size = UDim2.new(1, -10, 1, -30)
CreditText.Position = UDim2.new(0, 5, 0, 25)
CreditText.Text = "MADE BY ROBLOXSPLIOT (BETA)"
CreditText.TextColor3 = Color3.fromRGB(255, 255, 255)
CreditText.Font = Enum.Font.Gotham
CreditText.TextSize = 12
CreditText.BackgroundTransparency = 1

-- üåü Function to Create Pop-ups üåü --
local function createPopup(title, description)
    local Popup = Instance.new("Frame")
    Popup.Parent = ScreenGui
    Popup.Size = UDim2.new(0, 300, 0, 200)
    Popup.Position = UDim2.new(0.5, -150, 0.5, -100)
    Popup.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    Popup.BackgroundTransparency = 0.2

    local PopupCorner = Instance.new("UICorner")
    PopupCorner.Parent = Popup
    PopupCorner.CornerRadius = UDim.new(0, 15)

    local PopupGlow = Instance.new("UIStroke")
    PopupGlow.Parent = Popup
    PopupGlow.Color = Color3.fromRGB(120, 120, 120)
    PopupGlow.Thickness = 3

    local Title = Instance.new("TextLabel")
    Title.Parent = Popup
    Title.Size = UDim2.new(1, -20, 0, 40)
    Title.Position = UDim2.new(0, 10, 0, 10)
    Title.Text = title
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 18
    Title.BackgroundTransparency = 1

    local CloseButton = Instance.new("TextButton")
    CloseButton.Parent = Popup
    CloseButton.Size = UDim2.new(0, 100, 0, 30)
    CloseButton.Position = UDim2.new(0.5, -50, 1, -40)
    CloseButton.Text = "‚úñ Close"
    CloseButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    CloseButton.TextColor3 = Color3.fromRGB(200, 0, 0)
    CloseButton.Font = Enum.Font.GothamBold
    CloseButton.TextSize = 16

    local CloseCorner = Instance.new("UICorner")
    CloseCorner.Parent = CloseButton
    CloseCorner.CornerRadius = UDim.new(0, 10)

    CloseButton.MouseButton1Click:Connect(function()
        Popup:Destroy()
    end)
end

-- üåü Function to Create Buttons üåü --
local function createButton(name, position, action)
    local Button = Instance.new("TextButton")
    Button.Parent = MainFrame
    Button.Size = UDim2.new(0, 180, 0, 40)
    Button.Position = UDim2.new(0, 10, 0, position)
    Button.Text = name
    Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.Font = Enum.Font.Gotham
    Button.TextSize = 14

    Button.MouseButton1Click:Connect(action)
end

-- üåü Buttons & Functions üåü --
createButton("üöÄ Speed", 50, function()
end)
createButton("üëÄ ESP", 100, function() 
    createPopup("ESP", "Highlight players in the game!")
end)
createButton("üîë Admin Panel", 150, function() 
    createPopup("Admin Panel", "üö® Admin tools coming soon!")
end)
createButton("üé≠ Troll", 200, function() 
    createPopup("Troll Menu", "üòÇ Funny troll scripts coming soon!")
end)
createButton("üìç Teleport", 250, function() 
    createPopup("Teleport", "Teleport anywhere in the game!")
end)
createButton("üîÑ Spin", 300, function() 
    createPopup("Spin Mode", "Make your character spin!")
end)
createButton("üé≠ Emotes", 350, function() 
    createPopup("Emotes", "Play cool animations!")
end)
createButton("üõ† Tools", 400, function() 
    createPopup("Tools", "Give yourself useful items!")
end)

-- ‚úÖ Everything is spaced correctly, and now the warning frame does NOT overlap!
